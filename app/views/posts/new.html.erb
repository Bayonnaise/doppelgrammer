<%= form_for @post do |f| %>

	<div class="form-group">
		<h3><%= f.label :picture1, 'First doppelgrammer'  %></h3>
		<%= f.file_field :picture1, html: { multipart: true }, required: true %>
	</div>

	<div class="form-group">
		<%= f.text_field :caption1, placeholder: "Name", required: true, class: "form-control" %>
	</div>

	<div class="form-group">
		<h3><%= f.label :picture2, 'Second doppelgrammer' %></h3>
		<%= f.file_field :picture2, html: { multipart: true }, required: true %>
	</div>

	<div class="form-group">
		<%= f.text_field :caption2, placeholder: "Name", required: true, class: "form-control" %>
	</div>

	<div class="form-group"><%= f.submit "Submit", class: 'btn btn-default' %></div>
<% end %>