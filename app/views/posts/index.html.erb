
<% if @posts.any? %>
	<% @posts.each do |post| %>
		<% if post.picture1.present? %>
			<%= image_tag post.picture1.url(:medium), class: 'first_upload' %>
			<h3><%=post.caption1 %> </h3>
		<% end %>
		<% if post.picture2.present? %>
			<%= image_tag post.picture2.url(:medium), class: 'second_upload' %>
			<h3><%=post.caption2 %> </h3>
		<% end %>
	<% end %>
<% else %>
	<p>No doppelgrammers yet...</p>
<% end %>

<%=link_to 'Add a post', new_post_path %>